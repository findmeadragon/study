     @e17.6.4. àš¬¥àë ¯à®£ ¬¬šà®¢ ­šï

       ª ç¥áâ¢¥  ¯àš¬¥à   ¯àš¢¥€¥¬  âàš  ¯®€¯à®£à ¬¬ë  à ¡®âë á
€šá¯«¥¥¬ EGA ¢ à¥Šš¬¥ 640 å  200. á«š ë å®âšâ¥ šá¯®«ì§®¢ âì šå
¢ €àã£šå   à¥Šš¬ å,  €®áâ â®ç­®   ¯®¬¥­ïâì  §­ ç¥­š¥   ª®­áâ ­âë
PageSize ­  á®®â¢¥âáâ¢ãîé¥¥ §­ ç¥­š¥.

PageSize equ   4000h     ; à §¬¥à áâà ­šæë €«ï à¥Šš¬  640 å 200

;ÉÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍ»
;º ®€¯à®£à ¬¬  ®çšáâªš íªà ­ .              º
;º å®€: CX = ­®¬¥à ®çšé ¥¬®© áâà ­šæë (0-3) º
;ÈÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍŒ

EGA_Cls   àroc near
     àush ax
     àush bx
     àush cx
     àush dx
     àush es
     àush di
     xor  ax,ax     ; ¢ëçšá«ï¥¬ á¬¥é¥­š¥ €® áâà ­šæë
     mov  bx,PageSize
     jcxz Page_0
High_Page:
     add  ax,bx
     looà High_Page
Page_0:
     mov  di,ax     ; DI =  €à¥á áâà ­šæë ¢ ¢š€¥®¯ ¬ïâš
     mov  ax,0A000h
     mov  es,ax     ; ES:DI = ¯®«­ë©  €à¥á áâà ­šæë
     mov  ax,0FF08h
     mov  dx,3CEh   ; £à äšç¥áªš© ª®­âà®««¥à
     out  dx,ax     ; ãáâ ­®¢šâì ¢á¥ ¡šâ®¢ë¥ ¬ áªš
     mov  ax,0FF02h
     mov  dx,3C4h   ; ¡«®ª áš­åà®­š§ æšš
     out  dx,ax     ; à §à¥èšâì § ¯šáì ¢® ¢á¥ ¯«®áª®áâš
     mov  ax,3
     mov  dx,3CEh   ; £à äšç¥áªš© ª®­âà®««¥à
     out  dx,ax     ; § € âì ­®à¬ «ì­ë© à¥Šš¬ à ¡®âë
     mov  cx,PageSize
     xor  al,al
     reà  stosb     ; ®¡­ã«šâì áâà ­šæã
     àoà  di
     àoà  es
     àoà  dx
     àoà  cx
     àoà  bx
     àoà  ax
     ret
EGA_Cls   endà

;ÉÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍ»
;º ®€¯à®£à ¬¬  ¢ë¢®€  ¯šªá¥«ï ­  íªà ­.     º
;º å®€: AX = æ¢¥â ¯šªá¥«ï                   º
;º   BX = ­®¬¥à áâà ­šæë                     º
;º   CX = ­®¬¥à áâ®«¡æ  (X)                  º
;º   DX = ­®¬¥à áâà®ªš  (Y)                  º
;ÈÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍŒ

Put_Pixel àroc near
     àush ax
     àush bx
     àush cx
     àush dx
     àush es

     àush ax
     àush cx
     àush dx
     mov  ax,dx
     mov  cx,80
     mul  cx    ; AX = 80 * Y
     àoà  dx
     àoà  cx
     àush cx
     shr  cx,1
     shr  cx,1
     shr  cx,1  ; CX = X / 8
     add  ax,cx ; AX = 80 * Y + X / 8
     mov  cx,bx ; ­®¬¥à áâà ­šæë
     mov  bx,PageSize
     jcxz Page_Done
Next_Page:
     add  ax,bx ; ãçâ¥¬ á¬¥é¥­š¥ €® áâà ­šæë
     looà Next_Page
Page_Done:
     àoà  cx
     mov  bx,ax ; BX =  €à¥á ¡ ©â , á®€¥àŠ é¥£® ¯šªá¥«ì
     mov  ax,0A000h
     mov  es,ax ; ES:BX = ¯®«­ë©  €à¥á ¡ ©â 
     and  cl,7  ; CL = X % 7
     mov  ah,80h
     shr  ah,cl ; AH = ¯®§šæšï ¯šªá¥«ï ¢ ¡ ©â¥
     mov  dx,3CEh
     mov  al,8
     out  dx,ax ; à §à¥èšâì § ¯šáì â®«ìª® ¢ íâ®â ¡šâ
     àoà  ax
     mov  ch,al ; æ¢¥â ¯šªá¥«ï
     mov  dx,3C4h
     mov  ax,0FF02h
     out  dx,ax ; à §à¥èšâì § ¯šáì ¢® ¢á¥ ¯«®áª®áâš
     mov  al,es:[bx] ; çšâ ¥¬ ¡ ©â
     xor  al,al
     mov  es:[bx],al ; ®¡­ã«ï¥¬ ¯šªá¥«ì
     mov  al,2
     mov  ah,ch     ; æ¢¥â
     and  ah,0Fh    ; ¯àš¢¥€¥¬ ª €š ¯ §®­ã 0-15
     out  dx,ax     ; à §à¥èšâì § ¯šáì ¢ á®®â¢. ¯«®áª®áâš
     mov  al,es:[bx] ; çšâ ¥¬ ¡ ©â
     mov  al,0FFh
     mov  es:[bx],al ; ãáâ ­ ¢«š¢ ¥¬ ¯šªá¥«ì
     mov  ax,0FF02h
     out  dx,ax     ; à §à¥èšâì § ¯šáì ¢® ¢á¥ ¯«®áª®áâš
     mov  ax,3
     mov  dx,3CEh   ; £à äšç¥áªš© ª®­âà®««¥à
     out  dx,ax     ; § € âì ­®à¬ «ì­ë© à¥Šš¬ à ¡®âë
     mov  ax,0FF08h
     out  dx,ax     ; ¢ª«îçšâì ¢á¥ ¡šâë
     àoà  es
     àoà  dx
     àoà  cx
     àoà  bx
     àoà  ax
     ret
Put_Pixel endà

;ÉÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍ»
;º ®€¯à®£à ¬¬  çâ¥­šï æ¢¥â  ¯šªá¥«ï.        º
;º å®€: CX = ­®¬¥à áâ®«¡æ  (X)              º
;º   DX = ­®¬¥à áâà®ªš  (Y)                  º
;º ëå®€:AX = æ¢¥â ¯šªá¥«ï                   º
;ÈÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍÍŒ

Get_Pixel àroc near
     àush ax
     àush bx
     àush cx
     àush dx
     àush es
     àush dx
     mov  ax,205h
     mov  dx,3CEh
     out  dx,ax     ; à¥Šš¬ë: § ¯šáš=01, çâ¥­šï=0
     àoà  dx
     àush cx
     àush dx
     mov  ax,dx
     mov  cx,80
     mul  cx   ; AX = 80 * Y
     àoà  dx
     àoà  cx
     àush cx
     shr  cx,1
     shr  cx,1
     shr  cx,1      ; CX = X / 8
     add  ax,cx     ; AX = 80 * Y + X / 8
     mov  cx,bx     ; ­®¬¥à áâà ­šæë
     mov  bx,PageSize
     jcxz My_Page
Higher_Page:
     add  ax,bx     ; ãçâ¥¬ á¬¥é¥­š¥ €® áâà ­šæë
     looà Higher_Page
My_Page:
     mov  di,ax     ; DI =  €à¥á ¡ ©â , á®€¥àŠ é¥£® ¯šªá¥«ì
     mov  ax,0A000h
     mov  es,ax     ; ES:DI = ¯®«­ë©  €à¥á ¡ ©â 
     àoà  cx
     and  cl,7      ; CL = X % 7
     mov  ch,80h
     shr  ch,cl     ; CH = ¯®§šæšï ¯šªá¥«ï ¢ ¡ ©â¥
     mov  bl,7
     sub  bl,cl
     mov  cl,bl     ; CL = ­®¬¥à ¡šâ  ¢ ¡ ©â¥
     xor  bl,bl     ; ­ ª®¯šâ¥«ì æ¢¥â 
     mov  ah,3      ; áç¥âçšª ¡šâ®¢ëå ¯«®áª®áâ¥©
     mov  al,4      ; R4 = à¥£šáâà ¢ë¡®à  ¯«®áª®áâš
     mov  dx,3CEh   ; £à äšç¥áªš© ª®­âà®««¥à
Read_Plane:
     out  dx,ax     ; ¢ë¡šà ¥¬ ¯«®áª®áâì AH
     mov  bh,es:[di] ; çšâ âì ¡ ©â
     and  bh,ch     ; ¢ë¡à âì ¡šâ
     shr  bh,cl     ; á€¢š­ãâì æ¢¥â ¢ ¡šâ 0
     shl  bl,1      ; á€¢š­ãâì ¢ë¡à ­­ë¥ æ¢¥â 
     or   bl,bh     ; š €®¡ ¢šâì áçšâ ­­ë©
     dec  ah        ; á«¥€ãîé ï ¯«®áª®áâì
     jge  Read_Plane ; ¯®¢â®àšâì €«ï ¢á¥å ¯«®áª®áâ¥©
     mov  al,bl
     xor  ah,ah     ; AX = æ¢¥â ¯šªá¥«ï
     àoà  es
     àoà  dx
     àoà  cx
     àoà  bx
     àoà  ax
     ret
Get_Pixel endà
@pb
